  return (
    options != null ? (
      <div className="combobox-container">
        <select
          value={selectedValue}
          onChange={handleChange}
          className="combobox"
        >
          <option value="" disabled>{headerTitle}</option> {/* "Seçiniz" seçeneğini ekledik */}
          {options
            .filter(option => option.qState !== "X")  // Qlik'te seçilebilir olmayan "X" işaretli olur o yüzden onları dahil etmiyoruz
            .map((option, index) => (
              <option
                key={index}
                value={!isNaN(new Date(option.text).getTime()) ? formatDate(option.text) : option.text}
                className="combobox-option"
                title={option.text} // Full text as a tooltip
              >
                {!isNaN(new Date(option.text).getTime()) ? formatDate(option.text) : truncateText(option.text) }
              </option>
            ))}
        </select>
      </div>
    ) : (
      <></>
    )
  );
}
