const toggleRow = (id, parentId = '') => {
  const key = parentId ? `${parentId}-${id}` : `${id}`;
  
  if (expandedRows.includes(key)) {
    // Satırı kapat
    setExpandedRows((prevState) => prevState.filter((rowId) => rowId !== key));
  } else {
    // Satırı aç
    const rowElement = document.getElementById(key);
    const rowHeight = rowElement.scrollHeight; // Gerçek yüksekliği al
    rowElement.style.height = `${rowHeight}px`; 
    setExpandedRows((prevState) => [...prevState, key]);
    setTimeout(() => rowElement.style.height = 'auto', 300); // Geçiş sonrası auto yapmak için
  }
};
