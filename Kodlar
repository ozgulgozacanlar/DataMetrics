  // Benzersiz id'leri eklemek için önce id'yi kontrol et
        if (!favoriteArray.some(item => item.id === appArr.id)) {
          favoriteArray.push({
            name: appArr.name,
            publishTime: appArr.publishTime,
            thumbnail: appArr.thumbnail,
            description: appArr.description,
            favStatus: true,
            id: appArr.id,
          });
        }
