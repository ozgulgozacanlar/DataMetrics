cardTitles.length > 0 ? (  
      <div className="combobox-container ml-2">
        <select
          value={selectedValue}
          onChange={handleChange}
          className="combobox"
        >
          {cardTitles.map((option, index) => (
            <option
              key={index}
              value={option.title}  // Use title as value for the option
              className="combobox-option"
              title={option.title}  // Full text as a tooltip
            >
              {truncateText(option.title)}  {/* Truncate text if it's too long */}
            </option>
          ))}
        </select>
      </div>
    ) : (
      <></>
    )
