useEffect(() => {
    if (app) {
        const updateSelections = () => {
            const selections = app.selectionState().selections;
            if (selections && selections.length > 0) {
                findRegionName();
            } else {
                console.log("Seçim yapılmamış.");
            }
        };

        // Başlangıçta seçim durumu kontrolü
        updateSelections();

        // Seçim durumu değiştikçe tekrar kontrol edilmesi için bir event listener eklemek
        app.on('selection-changed', updateSelections);

        // Cleanup: component unmount olduğunda listener'ı temizlemek
        return () => {
            app.off('selection-changed', updateSelections);
        };
    }
}, [app]);  // 'app' değiştiğinde çalışacak
