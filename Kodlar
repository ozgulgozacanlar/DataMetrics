useEffect(() => {
    if (!clickedChart) return; // clickedChart true olmadan işlem yapma

    // Qlik objesinden veriyi alıyoruz
    getObjectData(app, objectId).then((response) => {
        if (!response) {
            console.error('MultiBarChart Component : response verisi boş veya tanımsız.');
            return;
        }

        // Yeni gelen veriyi data state'ine set ediyoruz
        setData(response); // Bu işlem data'yı güncelleyecek ve grafik yeniden çizilecek
    }).catch((error) => {
        console.error('getObjectData error:', error);
    });

    // clickedChart'i false yaparak işlem tamamlandığında tekrar işlem yapılmamasını sağlıyoruz
    setClickedChart(false);

}, [clickedChart]); // clickedChart değiştiğinde tetiklenecek
