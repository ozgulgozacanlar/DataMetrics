import React, { useState } from 'react';
import { TableChart } from './TableChart'; // TableChart component'inizi import edin

const SwitchCard = ({ app }) => {
    const [selectedOption, setSelectedOption] = useState('region'); // Başlangıçta "Bölge" seçili

    const handleClick = (value) => {
        setSelectedOption(value);
    };

    return (
        <div className="col-12 col-xxl-6 d-flex flex-column">
            <div className="card flex-grow-1 position-relative">
                {/* Card Header - Bölge ve Banka */}
                <div className="card-header d-flex justify-content-between align-items-center">
                    <div className="tab-options">
                        <span
                            className={`tab-option ${selectedOption === 'region' ? 'active' : ''}`}
                            onClick={() => handleClick('region')}
                        >
                            Bölge
                        </span>
                        <span
                            className={`tab-option ${selectedOption === 'bank' ? 'active' : ''}`}
                            onClick={() => handleClick('bank')}
                        >
                            Banka
                        </span>
                    </div>
                </div>

                {/* İçerik */}
                <div className="card-body">
                    <TableChart app={app} objectId={"CvdJs"} />
                </div>
            </div>
        </div>
    );
};

export default SwitchCard;
