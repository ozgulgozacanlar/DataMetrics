  // `isFav` ile senkronize etmek için useEffect kullanıyoruz
  useEffect(() => {
    setFavStatus(isFav);
  }, [isFav]);

 const handleAddFavorite = async (id) => {
    console.log("Butona tıklandı, id:", id);
    const newStatus = !favStatus; // Durumu tersine çevir
    await toggleFavorites(id, newStatus);
    setFavStatus(newStatus); // UI'yi güncelle
  };
