  <table className={`${tableName === 'sube' ? 'low-high-table modal-table' : 'retired-profit-table modal-table'} table-bordered`}>
            <thead>
                <tr>
                    <th>&nbsp;</th>
                    {tableTitleArray && tableTitleArray.map((title, index) => {
                        const colSpanValue = tableName === 'sube' ? 5 : 6;
                        return (
                            <th colSpan={colSpanValue} key={index} >
                                {title}
                            </th>
                        );
                    })}
                    
                </tr>
                {tableName === 'sube' && (
                    <tr>
                        <th>&nbsp;</th>
                    </tr>
                )}             
                <tr>
                    {tableName !== 'sube' && <th>&nbsp;</th>}
                    {/* headers array'ini map ile döndürüp <th> öğelerine dönüştürüyoruz */}
                    {tableHeaderData && tableHeaderData.map((header, index) => (                      
                        <th key={index}>
                            {header}
                        </th>
                    ))}
                </tr>
            </thead>
            <tbody>
                {tableDataArray && tableDataArray.map((row, rowIndex) => (
                    <tr key={rowIndex}>
                        {row.map((cell, cellIndex) => {
                            return (
                                <td key={cellIndex} >
                                    <span>{cell}</span>
                                </td>
                            );
                        })}
                    </tr>
                ))}
            </tbody>
        </table>
