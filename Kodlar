// Y eksenindeki minimum ve maksimum değerleri hesaplıyoruz
const minValue = Math.min(...data.map(d => Math.min(d.value1, d.value2)));
const maxValue = Math.max(...data.map(d => Math.max(d.value1, d.value2)));

// Min ve max arasındaki farkı kontrol ediyoruz
const difference = maxValue - minValue;

// Eğer fark 2'den küçükse, minimum değeri alıyoruz
const yMin = difference < 2 ? minValue : 0; // Fark 2'den küçükse min'i kullanıyoruz, değilse 0'ı kullanıyoruz
const yMax = difference < 2 ? minValue + 2 : Math.ceil(maxValue / 20) * 20;  // Max değerini 2 ile artırıyoruz

// Y eksenini ayarlıyoruz
const y = d3.scaleLinear()
    .domain([yMin, yMax])  // Domain min ve max arasındaki değeri alacak şekilde
    .range([height, 0]);  // Y eksenini dikeyde ters yönde çiziyoruz

// Y ekseni için ticks fonksiyonu
const yAxis = d3.axisLeft(y)
    .ticks(5)  // 5 adet tick değeri ekliyoruz
    .tickFormat(d3.format('.2f'));  // 2 ondalıklı basamağa yuvarlıyoruz

// Y eksenini çiziyoruz
g.append('g')
    .attr('class', 'y-axis')
    .call(yAxis)
    .selectAll('.domain')
    .remove();
