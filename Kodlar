  const [selectedOption, setSelectedOption] = useState('Bolge');
  const [tableObjectId, setTableObjectId] = useState('CvdJs');

<div className="col-12 col-xxl-6 d-flex flex-column ">
              <div className="card flex-grow-1 position-relative">
                <div className="d-flex justify-content-between align-items-center mb-3">
                  {/* Card Title Component */}
                  <CardTitle app={app} objectId={tableObjectId} />

                  {/* Tab'lar Sağ Tarafta */}
                  <div className="tab-options">
                    <span
                      className={`tab-option ${selectedOption === 'Bolge' ? 'active' : ''}`}
                      onClick={() => handleClick('Bolge')}
                    >
                      Bölge Maaş Karlılık
                    </span>
                    <span
                      className={`tab-option ${selectedOption === 'Banka' ? 'active' : ''}`}
                      onClick={() => handleClick('Banka')}
                    >
                      Banka Ortalaması
                    </span>
                  </div>
                </div>
                <div className="promosyon-karlilik-table-wrapper">
                  <TableChart app={app} objectId={tableObjectId} onLoaded={() => handleChildLoaded('child1')}/>
                </div>

              </div></div>

 const handleClick = (value) => {
    setSelectedOption(value);
    console.log(value)
    setTimeout(() => {
      if (value === 'Bolge') {
        setTableObjectId('CvdJs');
      }
      else {
        setTableObjectId('kyFDGfJ');
      }
    }, 100);
   
  };
