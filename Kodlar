  // Son veriye bakıyoruz: Eğer Net Durum varsa, son veriyi -2 alıyoruz, yoksa -1
    const lastItem = result[result.length - 1];
    const lastDataItemIndex = netDurumItem ? data.length - 2 : data.length - 1;

    result[result.length - 1] = {
      header: `${lastItem.header} (${yearMonth})`,  // Son başlık: "Toplam Müşteri Adedi (2024-04)"
      value: data[lastDataItemIndex].qText  // Son verinin değeri
    };
