useEffect(() => {
  const filteredApps = qlikTableArray.flatMap(item =>
    item.apps.filter(app =>
      isMatch(app.appName, searchTerm) &&
      app.appName.toLowerCase().includes(searchTerm.toLowerCase()) // Tam eşleşme ve arama için bu kontrolü koruyoruz.
    )
  );

  console.log("filteredApps with search term match", filteredApps);

  // Burada favorites durumunu `isFav` olarak ekliyoruz
  const exactFilteredApps = filteredApps.map(app => ({
    ...app,
    isFav: favorites?.some(fav => fav.name === app.appName) ?? false, // Eğer favorilerde varsa `true`, yoksa `false`
  }));

  console.log("exactFilteredApps with `isFav` status:", exactFilteredApps);

  setFilteredApps(exactFilteredApps);
}, [searchTerm, qlikTableArray, favorites]);
