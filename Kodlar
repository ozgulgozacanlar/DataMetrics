export function formatDecimalNumber(number) {
  console.log(number)
  if(!number.includes("%") && number !== undefined){
    console.log(number)
    // Sayıyı virgül (binlik ayırıcı) olmadan işleyebilmek için temizle
    const cleanedNumber = number.replace(/,/g, '');
    console.log(cleanedNumber)
    // Sayıyı tam kısım (integer) ve ondalıklı kısmına ayır
    const [integerPart, decimalPart] = cleanedNumber.split('.');
  
    // Tam kısmı 3 haneli gruplara ayırarak formatla
    const formattedIntegerPart = new Intl.NumberFormat('de-DE').format(integerPart);
  
    // Ondalık kısmı virgül ile birleştirerek sonucu döndür
    console.log(decimalPart ? `${formattedIntegerPart},${decimalPart}` : formattedIntegerPart)
    return decimalPart ? `${formattedIntegerPart},${decimalPart}` : formattedIntegerPart;
  }
 
}
