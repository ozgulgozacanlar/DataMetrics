export default function LineChartLegend({legendText=[]}) {
    // Renkler dizisini tanÄ±mla
    const colors = ['blue', 'green']; // Gerekirse daha fazla renk ekleyebilirsiniz.

    return (
        <div className="d-flex align-items-center justify-content-end gap-2">
            {legendText.map((text, index) => (
                <div className="d-flex align-items-center gap-1" key={index}>
                    <div className={`legend-sq-detail ${colors[index % colors.length]}`}>&nbsp;</div>
                    <div className="legend-text">{text}</div>
                </div>
            ))}
        </div>
    )
}
