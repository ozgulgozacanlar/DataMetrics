const numDigits = Math.floor(Math.log10(Math.abs(minItem.value))) + 1;

// Basamağa göre yuvarlama katını belirle
const roundTo = Math.pow(10, numDigits - 1);  // Eğer 2 basamaksaysa 10, 3 basamaksaysa 100, 4 basamaksaysa 1000 vb.

// Min değeri en yakın yuvarlama katına yuvarla
let roundedMin = Math.floor(minItem.value / roundTo) * roundTo;
