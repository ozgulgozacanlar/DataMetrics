svg.append("line")
    .attr("x1", 0)
    .attr("x2", width)
    .attr("y1", yCenter)   // Yatay çizgiyi grafiğin ortasında sabitle
    .attr("y2", yCenter)   // Aynı y konumu ile çizgiyi yatay olarak uzat
    .attr("stroke", "black")  // Çizginin rengini ayarla
    .attr("stroke-width", 2);  // Çizgi kalınlığını ayarla
