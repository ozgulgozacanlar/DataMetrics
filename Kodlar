const renderHighlightedText = (text, searchTerm) => {
  if (!searchTerm) return text; // Eğer arama terimi yoksa orijinal metni döndür

  const normalizedSearchTerm = searchTerm.replace(/\s+/g, '').toLowerCase(); // Arama terimini normalize et
  const normalizedText = text.replace(/\s+/g, '').toLowerCase(); // Metni normalize et

  // Arama terimi, metinde bulunuyor mu?
  if (!normalizedText.includes(normalizedSearchTerm)) return text;

  // Eğer metin ve arama terimi eşleşiyorsa, parçalara ayırıyoruz
  const parts = text.split(new RegExp(`(${searchTerm})`, 'gi'));

  return parts.map((part, index) => {
    // Her parçayı normalize edip, eşleşmeye göre vurgulama yapıyoruz
    const normalizedPart = part.replace(/\s+/g, '').toLowerCase();
    return normalizedPart.includes(normalizedSearchTerm) ? (
      <strong className='search-selection' key={index}>{part}</strong> // Eşleşen kısmı kalın yap
    ) : part;
  });
};
