<>
      <div className="card-title">{tableTitle}</div>
     
        <table className="table table-striped">
          <thead>
            <tr>
              {/* headers array'ini map ile döndürüp <th> öğelerine dönüştürüyoruz */}
              {tableHeaderData && tableHeaderData.map((header, index) => (
                <th scope="col" key={index}>
                  {header}
                </th>
              ))}
            </tr>
          </thead>
          <tbody>
            {tableDataArray && tableDataArray.map((row, rowIndex) => (
              <tr key={rowIndex}>
                {row.map((cell, cellIndex) => {
                  return (
                    <td key={cellIndex}>
                      <span>{cell}</span>
                    </td>
                  );
                })}
              </tr>
            ))}
          </tbody>
        </table>
      
    </>
   <div className="col-12 col-xxl-6 d-flex flex-column ">
          <div className="card flex-grow-1 position-relative">
            <div className="card-header d-flex justify-content-between align-items-center">
              <div className="tab-options">
                <span
                  className={`tab-option ${selectedOption === 'region' ? 'active' : ''}`}
                  onClick={() => handleClick('region')}
                >
                  Bölge
                </span>
                <span
                  className={`tab-option ${selectedOption === 'bank' ? 'active' : ''}`}
                  onClick={() => handleClick('bank')}
                >
                  Banka
                </span>
              </div>
            </div>
            <TableChart app={app} objectId={"CvdJs"} />
           
          </div></div>
