// Tarihleri dönüştürüp sıralamak için fonksiyon
const convertAndSortByDate = (tableDatas) => {
  const dateRegex = /^\d{2}\/\d{2}\/\d{4}$/; // "dd/mm/yyyy" formatına uyan regex

  // Her bir satırdaki hücreleri kontrol et ve tarih ise Date nesnesine dönüştür
  const convertedTableData = tableDatas.map(row => {
    return row.map(cell => {
      // Tarih formatını tanıma
      if (dateRegex.test(cell)) {
        // Tarih formatını yyyy-mm-dd'ye çevir ve Date nesnesine dönüştür
        return new Date(cell.split('/').reverse().join('/'));
      }
      return cell;  // Tarih değilse olduğu gibi bırak
    });
  });

  // Verileri tarihe göre sıralama (eski tarihten yeni tarihe)
  const sortedTableData = convertedTableData.sort((a, b) => {
    // Eğer ilk hücre tarihse sıralama yap
    if (a[0] instanceof Date && b[0] instanceof Date) {
      return a[0] - b[0];  // Eski tarihten yeni tarihe sıralama
    }
    return 0;  // Eğer tarih değilse sıralama yapma
  });

  return sortedTableData; // Sıralanmış ve dönüştürülmüş veriyi geri döndür
};
