  // Genişlik güncellemesi için `useLayoutEffect` kullanıyoruz
  useLayoutEffect(() => {
    const updateWidth = () => {
      if (progressBarWrapperRef.current && !isWidthSet) {
        setSvgWidth(progressBarWrapperRef.current.offsetWidth);
        setIsWidthSet(true);  // İlk genişlik alındığında flag'ı true yap
      }
    };

    if (!isWidthSet) {
      // İlk renderda genişlik al
      setTimeout(updateWidth, 0);
    }

    window.addEventListener('resize', updateWidth);

    return () => {
      window.removeEventListener('resize', updateWidth); // Temizleme
    };
  }, [isWidthSet]); // Eğer width ayarlandıysa flag'i kullanarak kontrol et
