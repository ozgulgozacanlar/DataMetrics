const renderHighlightedText = (text, searchTerm) => {
  if (!searchTerm) return text; // Eğer arama terimi yoksa orijinal metni döndür

  const lowerCaseText = text.toLowerCase();
  const lowerCaseSearchTerm = searchTerm.toLowerCase();
  const result = [];
  let index = 0;

  // Arama terimini küçük harfe dönüştürülerek, metinde parça parça eşleştiririz
  while (index < lowerCaseText.length) {
    const matchIndex = lowerCaseText.indexOf(lowerCaseSearchTerm, index);
    if (matchIndex === -1) {
      // Eğer eşleşme yoksa kalan metni ekle ve döngüyü bitir
      result.push(text.slice(index));
      break;
    }

    // Eşleşen kısmı ve öncesindeki kısmı ayır
    result.push(text.slice(index, matchIndex));
    result.push(<strong className="search-selection" key={matchIndex}>{text.slice(matchIndex, matchIndex + searchTerm.length)}</strong>);

    // Yeni arama başlangıç indeksini güncelle
    index = matchIndex + searchTerm.length;
  }

  return result;
};
