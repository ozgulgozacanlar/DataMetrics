    useEffect(() => {
        // Qlik object render edildikten sonra metni dÃ¼zenleyelim
        const interval = setInterval(() => {
            const qlikObject = document.querySelector(`#${elementId}`);
            if (qlikObject) {
                const elements = qlikObject.querySelectorAll('.qv-st-value-overflow span');
                elements.forEach((span) => {
                    span.textContent = span.textContent
                        .split(' ')
                        .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
                        .join(' ');
                });
            }
        }, 500);

        // Clear interval when component unmounts
        return () => clearInterval(interval);
    }, [elementId]);
