const renderHighlightedText = (text, searchTerm) => {
  if (!searchTerm) return text; // Eğer arama terimi yoksa orijinal metni döndür

  // Arama terimini kelimelere ayır ve bunları düzenle
  const normalizedSearchTerm = searchTerm.toLowerCase().trim().replace(/\s+/g, ''); // Boşlukları kaldırarak
  const regex = new RegExp(normalizedSearchTerm.split('').join('.*?'), 'gi'); // Arama terimini küçük/büyük harfe duyarsız şekilde arar ve kısımları da kapsar

  const parts = text.split(regex); // Metni, arama terimi ile böler

  return parts.map((part, index) => {
    const matched = regex.test(part); // Eşleşen metin var mı kontrol et
    return matched ? (
      <strong className='search-selection' key={index}>{part}</strong> // Eşleşen kısmı kalın yap
    ) : (
      part
    );
  });
};
