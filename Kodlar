 useLayoutEffect(() => {
    // ResizeObserver ile boyut değişikliklerini takip et
    const resizeObserver = new ResizeObserver(() => {
      if (progressBarWrapperRef.current) {
        const newWidth = progressBarWrapperRef.current.offsetWidth;
        // Minimum genişlik sınırı 220px
        setSvgWidth(Math.max(newWidth, 220));
      }
    });

    // İlk renderda boyutu güncelle
    if (progressBarWrapperRef.current) {
      const initialWidth = progressBarWrapperRef.current.offsetWidth;
      setSvgWidth(Math.max(initialWidth, 220));
    }

    // observer'ı başlat
    if (progressBarWrapperRef.current) {
      resizeObserver.observe(progressBarWrapperRef.current);
    }

    // Temizleme işlemi
    return () => {
      resizeObserver.disconnect();  // observer'ı kaldır
    };
  }, []);
