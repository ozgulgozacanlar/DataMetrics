    const yScale = d3.scaleBand()
        .domain(data.slice(0, Math.min(visibleCount, data.length)).map(d => d.name)) // Sabitle ve sadece şu kadar öğeyi göster
        .range([margin.top, height - margin.bottom])
        .padding(0.5);

const handleScroll = (e) => {
    const scrollPosition = e.target.scrollTop;
    const barHeight = 20; 

    const newVisibleCount = scrollPosition === 0
        ? 5 // İlk yüklemede direkt olarak 5 çubuk görün
        : Math.min(
            data.length,
            Math.ceil(scrollPosition / barHeight) + 15
        );

    drawHorizontalBarChart(newVisibleCount);
};
