// Y eksenini çiziyoruz
const yAxisGroup = g.append('g')
    .attr('class', 'y-axis')
    .call(yAxis)
    .selectAll('.domain')
    .remove();

// Y eksenindeki tick'leri çizgilerle uzatıyoruz
yAxisGroup.selectAll('.tick line')
    .style('stroke', '#d3d3d3')  // Y eksenindeki tick çizgilerini gri yapıyoruz
    .style('stroke-width', 1)
    .style('shape-rendering', 'crispEdges') // Daha net çizgiler için
    .attr('x2', width); // Burada tick'leri x ekseninin sonuna kadar uzatıyoruz

// Y eksenindeki metinleri yerleştiriyoruz
yAxisGroup.selectAll('.tick text')
    .style('fill', '#333')  // Y ekseni metinlerini koyu gri renkte yapalım
    .style('font-size', '12px')
    .attr('x', -10);  // Metinleri sola kaydırıyoruz (daha iyi görünmesi için)
