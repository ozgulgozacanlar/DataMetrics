 combinedTableData && (
          <table className="detail-table">
            <thead>
              <tr>
                {combinedTableData.header && combinedTableData.header.map((header, index) => (
                  <th scope="col" key={index}>
                    {header}
                  </th>
                ))}
              </tr>
            </thead>
            <tbody>
              {combinedTableData.datas && combinedTableData.datas.map((row, rowIndex) => (
                <tr key={rowIndex}>
                  {row.map((cell, cellIndex) => {
                    const containsColor = colorArray.find(color => cell.includes(color));

                    return (
                      <td key={cellIndex}>
                        {containsColor ? (
                          <span
                            className="point"
                            style={{ backgroundColor: colorMap[containsColor] }}
                          ></span>
                        ) : (
                          capitalizeFirstLetter(truncateText(cell))
                        )}
                      </td>
                    );
                  })}
                </tr>
              ))}
            </tbody>
          </table>
        )
      )}
