useLayoutEffect(() => {
    const updateWidth = () => {
      if (progressBarWrapperRef.current) {
        setSvgWidth(progressBarWrapperRef.current.offsetWidth);
      }
    };

    // requestAnimationFrame ile DOM'un render edilmesini bekleyerek genişlik güncelleme
    const handleResize = () => {
      requestAnimationFrame(updateWidth);
    };

    // İlk render sonrası genişliği almak için
    handleResize();

    // Pencere boyutunda değişiklik olduğunda tekrar genişliği güncelle
    window.addEventListener('resize', handleResize);

    // Temizleme
    return () => {
      window.removeEventListener('resize', handleResize);
    };
  }, []);  // Yalnızca component mount olduğunda çalışır
