const handleScroll = (e) => {
    const scrollPosition = e.target.scrollTop;
    const barHeight = 30; // Çubuğun yaklaşık yüksekliği (30px)

    const newVisibleCount = Math.min(
        data.length,
        Math.ceil(scrollPosition / barHeight) + 5
    );

    drawHorizontalBarChart(newVisibleCount);
};
