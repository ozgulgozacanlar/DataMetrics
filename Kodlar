useEffect(() => {
  getFavorites()
    .then(async (favArr) => {
      let isFavorite = false;

      for (const fav of favArr) {
        if (fav.toString().trim() === datas.selectedAppId.toString().trim()) {
          isFavorite = true;
          console.log("Favori bulundu, işlem sonlandırılıyor.");
          break; // Döngüden çık
        }
      }

      console.log("isFavorite:", isFavorite);
      setFavStatus(isFavorite);
    })
    .catch((error) => {
      console.error('Favori data hatası:', error);
    });
}, [datas]);
