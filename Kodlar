// Dinamik olarak tick sayısını artırmaya çalışın
const tickCount = Math.max(5, Math.floor((yMax - yMin) / (yMax - yMin) * 10));

// Dinamik tick aralıkları
const yTicks = d3.range(yMin, yMax, (yMax - yMin) / tickCount);

// Y ekseni çizimi
const yAxisGroup = svg.append("g")
  .attr("class", "y-axis")
  .attr("transform", `translate(${margin.left},0)`)
  .call(d3.axisLeft(yScale).tickValues(yTicks)); 
