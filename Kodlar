<tr className={level === 0 ? 'parent-row' : (expandedRows.includes(`${parentId ? parentId + '-' : ''}${item.id}`) ? 'child-row expanded' : 'child-row')}>
.child-row {
  transform-origin: top;
  transform: scaleY(0);
  transition: transform 0.3s ease-in-out;
  overflow: hidden;
}

.child-row.expanded {
  transform: scaleY(1);
}
