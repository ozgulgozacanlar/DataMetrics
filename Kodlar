import React, { useState, useEffect } from "react";

const App = () => {
  const [userName, setUserName] = useState('');
  const [themePreference, setThemePreference] = useState('light');
  const [isLoading, setIsLoading] = useState(false);
  const [app, setApp] = useState(null);

  useEffect(() => {
    // Qlik Sense'e bağlanma
    const qlikApp = window.require(['js/qlik'], function (qlik) {
      const app = qlik.openApp('your-app-id', {
        url: "http://qlik-sense-server"
      });
      setApp(app);
    });

    return () => {
      if (app) {
        app.close();
      }
    };
  }, []);

  // Tabloyu güncelleme işlemi
  const updateTableData = () => {
    if (!app) {
      console.error('Uygulama bağlantısı mevcut değil');
      return;
    }

    // Tabloyu almak için objenin ID'sini kullanıyoruz
    app.visualization.get('your-table-object-id').then((vis) => {
      // Tabloyu almak için getTableData kullanıyoruz
      vis.getTableData(0, 100).then((data) => {
        console.log('Tablodaki mevcut veriler:', data);

        // Yeni veriyi ekliyoruz
        const updatedData = [
          { UserName: userName, ThemePreference: themePreference }
        ];

        // Tabloyu güncelleme
        vis.setData({
          data: updatedData
        }).then(() => {
          console.log('Tablo başarıyla güncellendi.');
        }).catch((error) => {
          console.error('Tablo güncellenemedi:', error);
        });
      }).catch((error) => {
        console.error('Tablo verilerini alma hatası:', error);
      });
    }).catch((error) => {
      console.error('Görselleştirme objesini alma hatası:', error);
    });
  };

  // Veriyi kaydetme ve tabloyu güncelleme
  const handleSave = () => {
    setIsLoading(true);

    if (!app) {
      console.error('Qlik Sense bağlantısı kurulamadı.');
      return;
    }

    // Yalnızca tabloyu güncellemek
    updateTableData();

    // Veriler yüklendikten sonra işlemi bitiriyoruz
    setIsLoading(false);
  };

  return (
    <div>
      <h1>Qlik Sense Tablosunu Güncelle</h1>

      <form onSubmit={(e) => { e.preventDefault(); handleSave(); }}>
        <div>
          <label htmlFor="userName">Kullanıcı Adı: </label>
          <input
            type="text"
            id="userName"
            value={userName}
            onChange={(e) => setUserName(e.target.value)}
            required
          />
        </div>

        <div>
          <label htmlFor="theme">Tema Tercihi: </label>
          <select
            id="theme"
            value={themePreference}
            onChange={(e) => setThemePreference(e.target.value)}
            required
          >
            <option value="light">Light</option>
            <option value="dark">Dark</option>
          </select>
        </div>

        <button type="submit" disabled={isLoading}>
          {isLoading ? 'Yükleniyor...' : 'Tabloyu Güncelle'}
        </button>
      </form>
    </div>
  );
};

export default App;
