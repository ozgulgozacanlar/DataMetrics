const handleCellClick = (cellValue, index) => {
    let filterName = "";

    // Filtre adını burada belirleyelim
    if (index === 0) {
        console.log("Team Name filter applied");
        filterName = "Team Name";
    } else if (index === 1) {
        console.log("Metric Name filter applied");
        filterName = "Metric Name";
    } else {
        console.log("YEAR_MONTH filter applied");
        filterName = "YEAR_MONTH";
    }

    // Sonrasında filterName'i kullanalım
    app.field(filterName).selectValues([cellValue], true).then(() => {
        console.log(`${filterName} filtresi uygulandı:`, cellValue);
        setRandomKey(Math.random());
    }).catch((error) => {
        console.error(`${filterName} alanına filtre uygulama hatası:`, error);
    });
}
