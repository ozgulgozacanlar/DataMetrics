useEffect(() => {
    async function loadSelections() {
        if (app) {
            const selections = app.selectionState().selections;

            // Seçimlerin yüklenmesini bekle (tembel yükleme kontrolü)
            while (selections.length === 0) {
                console.log("Seçimler yükleniyor...");
                await new Promise(resolve => setTimeout(resolve, 500));  // 500ms bekle
            }

            // Seçimler yüklenince işleme başla
            selections.forEach(selection => {
                console.log("Seçim Nesnesi: ", selection);
                selection.qSelected && selection.qSelected.forEach(selectedItem => {
                    console.log("Seçilen Değer: ", selectedItem.qText);
                });
            });
        }
    }

    loadSelections();
}, [app]);
