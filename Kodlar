const renderHighlightedText = (text, searchTerm) => {
  if (!searchTerm) return text; // Eğer arama terimi yoksa orijinal metni döndür

  const regex = new RegExp(searchTerm, 'gi'); // Küçük büyük harfe duyarsız eşleşme
  const parts = text.split(regex); // Eşleşen kısımları ayır

  // Metindeki her kısmı kontrol et
  return parts.map((part, index) => {
    // Eşleşen kısmı bulup, <strong> etiketi ile sar
    const match = text.match(regex);
    if (match && match[index]) {
      return (
        <span key={index}>
          <strong className='search-selection'>{match[index]}</strong>{part}
        </span>
      );
    }
    return <span key={index}>{part}</span>;
  });
};
