const getNewPageName = (pageName) => {
  let newPageName = pageName;  // Varsayılan olarak pageName'i al

  // Burada gelen pageName'e göre yeni bir pageName ayarlıyoruz
  if (pageName === 'musteri-detay') {
    newPageName = 'Müşteri';
  } else if (pageName === 'urun-detay') {
    newPageName = 'Ürün';
  } else if (pageName === 'siparis-detay') {
    newPageName = 'Sipariş';
  }
  // Diğer pageName'ler için başka koşullar ekleyebilirsiniz

  return newPageName;
};

      <span className="page-name">{getNewPageName(pageName)}</span>  {/* getNewPageName fonksiyonu burada çağrılıyor */}
