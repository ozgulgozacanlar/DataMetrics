const renderHighlightedText = (text, searchTerm) => {
  if (!searchTerm) return text; // Eğer arama terimi yoksa orijinal metni döndür

  // Arama terimini metinden ayırmak için boşlukları da dahil etmek üzere RegExp kullanıyoruz
  const parts = text.split(new RegExp(`(\\s*${searchTerm}\\s*)`, 'gi')); // Boşlukları da dahil ederek bölüyoruz

  return parts.map((part, index) =>
    part.toLowerCase().trim() === searchTerm.toLowerCase() ? (
      <strong className='search-selection' key={index}>{part}</strong> // Eşleşen kısmı kalın yap
    ) : (
      part // Eşleşmeyen kısımları olduğu gibi döndür
    )
  );
};
